{
    "name": "skluck/terraform-plan-parser",
    "description": "A PHP parser for Hashicorp's Terraform plans",
    "type": "library",
    "keywords": [
        "terraform",
        "hashicorp"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Kluck",
            "email": "steve@kluck.engineering"
        }
    ],
    "autoload": {
        "psr-4": {
            "SK\\TerraformParser\\": "src"
        }
    },
    "require": {
        "php": ">=7.3"
    },

    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "overtrue/phplint": "~1.1",
        "squizlabs/php_codesniffer": "~3.4"
    },

    "scripts": {
        "lint": "phplint --no-cache --ansi src",
        "sniff": "phpcs --runtime-set ignore_warnings_on_exit true",
        "sniff-nowarn": "phpcs -n",
        "test": "phpunit"
    }
}
